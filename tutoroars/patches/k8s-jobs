---
apiVersion: batch/v1
kind: Job
metadata:
  name: oars-job
  labels:
    app.kubernetes.io/component: job
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
      - name: oars
        env:
          - name: VENV_DIR
            value: /opt/venv
        image: {{ DOCKER_IMAGE_OARS }}
        securityContext:
          allowPrivilegeEscalation: false
          runAsUser: 0
        volumeMounts:
            - mountPath: /app/oars/scripts
              name: scripts
      volumes:
        - name: scripts
          configMap:
            name: oars-scripts
